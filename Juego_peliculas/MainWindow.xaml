<Window x:Class="Juego_peliculas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Juego_peliculas"
        mc:Ignorable="d"
        Icon="img/movie.ico"
        Title="Películas" Height="600" Width="900" MinHeight="600" MinWidth="900">
    <Grid>
        <TabControl>
            <!-- Pestaña JUGAR -->
            <TabItem Header="Jugar" Width="100">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!-- Imagen de la Película -->
                    <Image Grid.Row="0" Grid.Column="0" Source="https://pics.filmaffinity.com/scary_movie-943532513-large.jpg" Margin="0,10"></Image>

                    <!-- Bloque inferior con las Flechas -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Source="img/arrow.png" VerticalAlignment="Center"></Image>
                        
                        <TextBlock Text="1/5" VerticalAlignment="Center" FontSize="25" FontWeight="Bold"></TextBlock>
                        
                        <Image Source="img/arrow.png" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                                    <SkewTransform AngleY="0" AngleX="0"/>
                                    <RotateTransform Angle="0"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </StackPanel>
                    
                    <!-- Bloque de la derecha interactivo PENDIENTE-->
                    
                </Grid>
            </TabItem>

            <!-- Pestaña GESTIONAR -->
            <TabItem Header="Gestionar" Width="100">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="120"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <!-- ListBox con las peliculas -->
                    <ListBox Grid.Row="0" Grid.Column="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        
                    </ListBox>
                    
                    <!-- Bloque con botones a la derecha del ListBox con Peliculas -->
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,10,0,10">
                        <Button Content="Cargar de JSON" Margin="5"></Button>
                        <Button Content="Guardar en JSON" Margin="5"></Button>

                        <!-- Sustituir el boton de Añadir por Guardar pelicula. En caso de edición guarda las modificaciones.
                        En caso de añadir una nueva, crea nuevo objeto y lo agrega a la lista de peliculas
                        <Button Content="Añadir pelicula" Margin="5,30,5,5"></Button>
                        -->
                        <Button Content="Editar película" Margin="5,30,5,5"></Button>
                        <Button Content="Eliminar película" Margin="5"></Button>
                    </StackPanel>
                    
                    <!-- Bloque de la izquierda con el formulario -->
                    <Grid Grid.Column="0" Grid.Row="1" Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="130"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Título de la película" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="0" Height="25" Padding="3"></TextBox>

                        <TextBlock Text="Pista de la película" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="1" Height="25" Padding="3"></TextBox>

                        <TextBlock Text="Imágen de la película" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="2" Height="25" Padding="3"></TextBox>

                    </Grid>
                    
                    <!-- Bloque con botones a la derecha del formulario -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,16" Orientation="Vertical" VerticalAlignment="Bottom">
                        <Button Content="Examinar Imagen"></Button>
                    </StackPanel>

                    <!-- Bloque con botones a la derecha del formulario -->
                    <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,0" Orientation="Vertical" VerticalAlignment="Top">
                        <Button Content="Guardar Película"></Button>
                    </StackPanel>
                    
                    <!-- Bloque de la izquierda, debajo del formulario -->
                    <StackPanel  Grid.Column="0" Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <!-- ComboBox Nivel Dificultad -->
                        <TextBlock Text="Nivel de dificultad" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                        <ComboBox Margin="10,0" Height="25" Width="70">
                            <ComboBoxItem>
                                <TextBlock Text="Fácil"></TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Normal"></TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Difícil"></TextBlock>
                            </ComboBoxItem>
                        </ComboBox>

                        <!-- ComboBox Genero -->
                        <TextBlock Text="Género" VerticalAlignment="Center" FontWeight="Bold" Margin="50,0,0,0"></TextBlock>
                        <ComboBox Margin="10,0" Height="25" Width="70">
                            <ComboBoxItem>
                                <TextBlock Text="Cómedia"></TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Terror"></TextBlock>
                            </ComboBoxItem>
                            <ComboBoxItem>
                                <TextBlock Text="Ciencia Fricción"></TextBlock>
                            </ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
